# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/fulfillment_clients

# Google OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Gmail Email Configuration
# Gmail/Google Workspace account to send emails from
GMAIL_USER=sincro-reply@gosincro.com
# Gmail App Password (NOT your regular password)
# Generate at: https://myaccount.google.com/apppasswords
GMAIL_APP_PASSWORD=your_gmail_app_password_here
ADMIN_NOTIFICATION_EMAIL=admin@yourdomain.com

# Application Configuration
APP_URL=http://localhost:3000

# Auto-Admin Email (for auto-approval)
AUTO_ADMIN_EMAIL=tony.orr@easyship.com

# Sincro Access Admin App URL (for sending email notifications)
SINCRO_ACCESS_URL=http://localhost:4000
